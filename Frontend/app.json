{
  "expo": {
    "name": "HawkLoop",
    "slug": "hawkloop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0051ba"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ku.hawkloop",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "HawkLoop uses your location to show nearby bus stops and calculate ETAs."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0051ba"
      },
      "package": "com.ku.hawkloop",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow HawkLoop to use your location to find nearby bus stops and calculate accurate arrival times."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "hawkloop-ku"
      }
    }
  }
}